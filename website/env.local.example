# Local Development Environment Variables
# Copy this to .env for local development

# Database Configuration (SQLite for local dev)
DATABASE_URL="file:./dev.db"

# Redis Configuration (optional for local dev)
REDIS_URL="redis://localhost:6379"

# Application Configuration
NODE_ENV="development"
PORT=5173
HOST="localhost"

# Security (use random strings for local dev)
JWT_SECRET="local-dev-jwt-secret-123"
SESSION_SECRET="local-dev-session-secret-456"

# Better Auth Configuration
PRIVATE_BETTER_AUTH_SECRET="local-dev-better-auth-secret-789"
PUBLIC_BETTER_AUTH_URL="http://localhost:5173"

# Google OAuth (Required)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Discord OAuth (Optional - for Discord login)
DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# External Services (optional for local dev)
SUPABASE_URL=""
SUPABASE_ANON_KEY=""
OPENAI_API_KEY=""

# File Upload (local directory)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10MB"
