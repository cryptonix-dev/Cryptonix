# Ubuntu VPS Environment Variables Template
# Copy this to .env and configure with your actual values

# Database Configuration
DATABASE_URL="postgresql://cryptonix:your_secure_password@localhost:5432/cryptonix"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Application Configuration
NODE_ENV="production"
PORT=3000
HOST="0.0.0.0"

# Security
JWT_SECRET="your-super-secret-jwt-key-here"
SESSION_SECRET="your-super-secret-session-key-here"

# Better Auth Configuration
PRIVATE_BETTER_AUTH_SECRET="your-super-secret-better-auth-key-here"
PUBLIC_BETTER_AUTH_URL="http://localhost:5173"

# Google OAuth (Required)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Discord OAuth (Optional - for Discord login)
DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# External Services (if using)
SUPABASE_URL=""
SUPABASE_ANON_KEY=""
OPENAI_API_KEY=""

# File Upload (if needed)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10MB"
